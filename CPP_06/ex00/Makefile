CC		=	c++

CFLAGS	=	-Werror -Wall -Wextra -std=c++98

SRC		=	main.cpp	\

OBJ		=	$(SRC:.cpp=.o)

NAME	=	Coversion_scalaire

%.o		:	%.cpp
			$(CC) $(CFLAGS) -c $< -o $@

$(NAME)	:	$(OBJ)
			$(CC) $(CFLAGS) $(SRC) -o $(NAME)

all		:	$(NAME)

clean	:
			rm -rdf $(OBJ)

fclean	:	clean
			rm -rdf $(NAME)

re		:	fclean all

.PHONY	:	all clean fclean re
